<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FinanceManager.Pages.ManageCategoriesPage"
             Title="ניהול קטגוריות">

    <Grid RowDefinitions="*,Auto">

        <ScrollView Grid.Row="0">
            <VerticalStackLayout Padding="16" Spacing="12">

                <Label Text="הוספת קטגוריה" FontSize="20" HorizontalOptions="End" FontFamily="RubikBold" />
                <Entry Text="{Binding Name}"
                       Placeholder="לדוגמה: מזון"
                       FontSize="18"
                       ClearButtonVisibility="WhileEditing"
                       FlowDirection="LeftToRight"
                       HorizontalTextAlignment="End" /> 

                <Grid ColumnDefinitions="*,Auto" ColumnSpacing="12" FlowDirection="RightToLeft">
                    <Button Text="שמור" Command="{Binding SaveCommand}" />
                    <Button Grid.Column="1" Text="חדש" Command="{Binding NewCommand}" />
                </Grid>

                <Label Text="קטגוריות קיימות" Margin="0,16,0,0" FontSize="20" HorizontalOptions="End" FontFamily="RubikBold" />

                <CollectionView ItemsSource="{Binding Items}"
                                SelectionMode="Single"
                                SelectedItem="{Binding Selected}">  
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Grid Padding="12" ColumnDefinitions="*,Auto" FlowDirection="RightToLeft">
                                <VisualStateManager.VisualStateGroups>
                                    <VisualStateGroup x:Name="CommonStates">
                                        <VisualState x:Name="Normal">
                                            <VisualState.Setters>
                                                <Setter Property="BackgroundColor" Value="Transparent" />
                                            </VisualState.Setters>
                                        </VisualState>
                                        <VisualState x:Name="Selected">
                                            <VisualState.Setters>
                                                <Setter Property="BackgroundColor"
                                Value="{AppThemeBinding Light='#F5F5F5', Dark='#2A2A2A'}" />
                                            </VisualState.Setters>
                                        </VisualState>
                                    </VisualStateGroup>
                                </VisualStateManager.VisualStateGroups>

                                <Label x:Name="NameLbl"
                                       Text="{Binding Name}"
                                       VerticalOptions="Center"
                                       FontSize="18" />

                                <ImageButton Grid.Column="1"
                                             WidthRequest="28" HeightRequest="28"
                                             BackgroundColor="Transparent"
                                             Source="trash.png"
                                             Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.DeleteCommand}"
                                             CommandParameter="{Binding .}" />  
                            </Grid>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

            </VerticalStackLayout>
        </ScrollView>

        <!-- Bottom bar with back button -->
        <Border Grid.Row="1"
                BackgroundColor="{AppThemeBinding Light='White', Dark='#1E1E1E'}"
                StrokeThickness="0"
                Padding="16,10,16,16">
            <Button Text="חזור"
                    Clicked="OnBackClicked"
                    HorizontalOptions="Fill"
                    HeightRequest="44" />
        </Border>
        
    </Grid>
</ContentPage>