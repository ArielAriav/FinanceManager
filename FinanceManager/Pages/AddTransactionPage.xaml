<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:sys="clr-namespace:System;assembly=netstandard"
             x:Class="FinanceManager.Pages.AddTransactionPage"
             Title="AddTransactionPage">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="14">

            <Label Text="קטגוריה" />
            <Picker
            ItemsSource="{Binding Categories}"
            ItemDisplayBinding="{Binding Name}"
            SelectedItem="{Binding SelectedCategory}" />

            <Label Text="סכום" />
            <Entry
            Text="{Binding AmountText}"
            Keyboard="Numeric"
            Placeholder="0.00"
            ClearButtonVisibility="WhileEditing" />

            <!-- חדש: תאריך בלבד -->
            <Label Text="תאריך" />
            <DatePicker
            Date="{Binding Date}"
            MaximumDate="{x:Static sys:DateTime.Today}" />

            <Label Text="הערה" />
            <Editor
            Text="{Binding Note}"
            AutoSize="TextChanges"
            MinimumHeightRequest="80" />

            <Grid ColumnDefinitions="*,*" ColumnSpacing="12" Margin="0,8,0,0">
                <Button Text="ביטול" Grid.Column="0"
                    Command="{Binding CancelCommand}" />
                <Button Text="שמירה" Grid.Column="1"
                    Command="{Binding SaveCommand}" />
            </Grid>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>