<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="FinanceManager.Pages.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:FinanceManager.ViewModels"
    x:DataType="vm:MainViewModel"
    xmlns:m="clr-namespace:FinanceManager.Models"
    Title="Finance Manager">


    <Grid Padding="16" RowSpacing="12"
        RowDefinitions="Auto,*,Auto">

        <!-- Header: previous | month | next -->
        <Grid Grid.Row="0"
              ColumnDefinitions="48,*,48"
              Padding="0,8"
              HorizontalOptions="Fill"
              VerticalOptions="Center">

            <!-- Arrow to previous month  -->
            <Button Grid.Column="0"
                    Text="❮"
                    TextColor="gray"
                    FontSize="22"
                    WidthRequest="48" HeightRequest="48"
                    Padding="0"
                    BackgroundColor="Transparent"
                    Command="{Binding PrevMonthCommand}" />

            <!-- Name of the month in the center -->
            <Label  Grid.Column="1"
                    Text="{Binding DisplayMonth}"
                    TextColor="gray"
                    FontAttributes="Bold"
                    FontSize="18"
                    HorizontalTextAlignment="Center"
                    VerticalTextAlignment="Center" />

            <!-- Arrow to next month -->
            <Button Grid.Column="2"
                    Text="❯"
                    TextColor="gray"
                    FontSize="22"
                    WidthRequest="48" HeightRequest="48"
                    Padding="0"
                    BackgroundColor="Transparent"
                    Command="{Binding NextMonthCommand}"
                    IsEnabled="{Binding CanGoNext}" />
        </Grid>

        <!-- The list occupies the entire middle area. -->
        <CollectionView Grid.Row="1"
                        ItemsSource="{Binding Transactions}"
                        SelectionMode="None">
            <CollectionView.ItemsLayout>
                <LinearItemsLayout Orientation="Vertical" ItemSpacing="6" />
            </CollectionView.ItemsLayout>

            <!-- There is no data for the month -->
            <CollectionView.EmptyView>
                <Grid Padding="16" RowDefinitions="Auto,Auto"
                      HorizontalOptions="Center" VerticalOptions="Center">
                    <Label Grid.Row="0"
                           Text="אין תנועות לחודש זה"
                           FontSize="Medium"
                           HorizontalTextAlignment="Center" />
                    <Image Grid.Row="1"
                           Source="no_data.png"
                           Aspect="AspectFit"
                           HorizontalOptions="Center" />
                </Grid>
            </CollectionView.EmptyView>

            <!-- Data for the current month -->
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="m:TransactionRow">
                    <Border
                        Margin="0,2"
                        Padding="5"
                        BackgroundColor="AliceBlue"
                        StrokeThickness="0"
                        StrokeShape="RoundRectangle 10">
                        <Grid ColumnSpacing="2" ColumnDefinitions="Auto,Auto,*,Auto" FlowDirection="RightToLeft">
                            <Label Grid.Column="0" Text="{Binding TypeText}" FontAttributes="Bold"
                                   VerticalOptions="Center" FontSize="18"/>
                            <Image Grid.Column="1"
                                   Source="line_symbol.png"
                                   Aspect="AspectFit"
                                   WidthRequest="30" HeightRequest="30"/>
                            <VerticalStackLayout Grid.Column="2" Spacing="2">
                                <Label Text="{Binding CategoryName}" FontSize="18" />
                                <Label Text="{Binding WhenText}" FontSize="16" />
                            </VerticalStackLayout>
                            <Label Grid.Column="3" Text="{Binding AmountText}" FontAttributes="Bold"
                                   HorizontalTextAlignment="End" VerticalOptions="Center"/>
                        </Grid>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!-- Buttons at the bottom, always visible -->
        <Grid Grid.Row="2"
          ColumnDefinitions="*,*"
          RowDefinitions="Auto,Auto"
          ColumnSpacing="12" RowSpacing="10">
            <Button Grid.Column="0" Grid.Row="0" Text="המעטפות שלי" HeightRequest="44"
              Clicked="OnMyEnvelopesClicked" />
            <Button Grid.Column="1" Grid.Row="0" Text="הוספת הכנסה/הוצאה" HeightRequest="44"
              Clicked="OnAddTransactionClicked" />
            <Button Grid.Column="0" Grid.Row="1" Text="ניהול קטגוריות" HeightRequest="44"
                    Clicked="OnManageCategoriesClicked"/>
            <Button Grid.Column="1" Grid.Row="1" Text="ניהול תקציבים" HeightRequest="44"
                    Clicked="OnManageBudgetClicked"/>
        </Grid>
    </Grid>
</ContentPage>
