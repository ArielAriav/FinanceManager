<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="FinanceManager.Pages.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:FinanceManager.ViewModels"
    x:DataType="vm:MainViewModel"
    xmlns:m="clr-namespace:FinanceManager.Models"
    Title="Finance Manager">


    <Grid Padding="16" RowSpacing="12"
        RowDefinitions="Auto,Auto,*,Auto">

        <!-- Header: previous | month | next -->
        <Grid Grid.Row="0"
              ColumnDefinitions="48,*,48"
              Padding="0,8"
              HorizontalOptions="Fill"
              VerticalOptions="Center">

            <!-- Arrow to previous month  -->
            <Button Grid.Column="0"
                    Text="❮"
                    TextColor="gray"
                    FontSize="22"
                    WidthRequest="48" HeightRequest="48"
                    Padding="0"
                    BackgroundColor="Transparent"
                    Command="{Binding PrevMonthCommand}" />

            <!-- Name of the month in the center -->
            <Label  Grid.Column="1"
                    Text="{Binding DisplayMonth}"
                    TextColor="gray"
                    FontAttributes="Bold"
                    FontSize="18"
                    HorizontalTextAlignment="Center"
                    VerticalTextAlignment="Center" />

            <!-- Arrow to next month -->
            <Button Grid.Column="2"
                    Text="❯"
                    TextColor="gray"
                    FontSize="22"
                    WidthRequest="48" HeightRequest="48"
                    Padding="0"
                    BackgroundColor="Transparent"
                    Command="{Binding NextMonthCommand}"
                    IsEnabled="{Binding CanGoNext}" />
        </Grid>

        <Border Grid.Row="1"
                Margin="0,6,0,0"
                Padding="4"
                Stroke="#5B33D6"
                StrokeThickness="1"
                BackgroundColor="#F3EEFF"
                StrokeShape="RoundRectangle 24"
                HorizontalOptions="Center">
            <Grid ColumnDefinitions="*,*"
                  FlowDirection="RightToLeft">

                <!-- הוצאות -->
                <Button Text="הוצאות"
                        Command="{Binding ShowExpensesCommand}"
                        CommandParameter="Expense"
                        Padding="18,10"
                        CornerRadius="24"
                        FontAttributes="Bold"
                        MinimumWidthRequest="100">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="BackgroundColor" Value="Transparent"/>
                            <Setter Property="TextColor" Value="#5B33D6"/>
                            <Style.Triggers>
                                <!-- כאשר מצב התצוגה הוא הוצאות -->
                                <DataTrigger TargetType="Button"
                                     Binding="{Binding IsExpensesSelected}"
                                     Value="True">
                                    <Setter Property="BackgroundColor" Value="#5B33D6"/>
                                    <Setter Property="TextColor" Value="White"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <!-- הכנסות -->
                <Button Grid.Column="1"
                        Text="הכנסות"
                        Command="{Binding ShowIncomeCommand}"
                        CommandParameter="Income"
                        Padding="18,10"
                        CornerRadius="24"
                        FontAttributes="Bold"
                        MinimumWidthRequest="100">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="BackgroundColor" Value="Transparent"/>
                            <Setter Property="TextColor" Value="#5B33D6"/>
                            <Style.Triggers>
                                <!-- כאשר מצב התצוגה הוא הכנסות -->
                                <DataTrigger TargetType="Button"
                                     Binding="{Binding IsIncomeSelected}"
                                     Value="True">
                                    <Setter Property="BackgroundColor" Value="#5B33D6"/>
                                    <Setter Property="TextColor" Value="White"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </Border>


        <!-- The list occupies the entire middle area. -->
        <CollectionView Grid.Row="2"
                        ItemsSource="{Binding Transactions}"
                        SelectionMode="None">
            <CollectionView.ItemsLayout>
                <LinearItemsLayout Orientation="Vertical" ItemSpacing="6" />
            </CollectionView.ItemsLayout>

            <!-- There is no data for the month -->
            <CollectionView.EmptyView>
                <Grid Padding="16" RowDefinitions="Auto,Auto"
                      HorizontalOptions="Center" VerticalOptions="Center">
                    <Label Grid.Row="0"
                           Text="אין תנועות לחודש זה"
                           FontSize="Medium"
                           HorizontalTextAlignment="Center" />
                    <Image Grid.Row="1"
                           Source="no_data.png"
                           Aspect="AspectFit"
                           HorizontalOptions="Center" />
                </Grid>
            </CollectionView.EmptyView>

            <!-- Data for the current month -->
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="m:CategoryRow">
                    <Border
                        Margin="0,2"
                        Padding="8"
                        BackgroundColor="AliceBlue"
                        StrokeThickness="0"
                        StrokeShape="RoundRectangle 10">
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}},
                                                      Path=BindingContext.OpenCategoryCommand}"
                                    CommandParameter="{Binding}" />
                        </Border.GestureRecognizers>

                        <!-- 2 Columns: texts on the right, sum on the left -->
                        <Grid ColumnDefinitions="*,Auto" FlowDirection="RightToLeft">

                            <!-- Category name + budget line (if exist) -->
                            <VerticalStackLayout Spacing="2">
                                <Label Text="{Binding CategoryName}" FontSize="18" />
                                <Label Text="{Binding BudgetText}" FontSize="12"
                                       TextColor="#666666"
                                       IsVisible="{Binding HasBudget}" />
                            </VerticalStackLayout>

                            <!-- The total amount for the category -->
                            <Label Grid.Column="1"
                                   Text="{Binding AmountText}"
                                   FontAttributes="Bold"
                                   HorizontalTextAlignment="End"
                                   VerticalOptions="Center" />
                        </Grid>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!-- Buttons at the bottom, always visible -->
        <Grid Grid.Row="3"
          ColumnDefinitions="*,*"
          RowDefinitions="Auto,Auto"
          ColumnSpacing="12" RowSpacing="10">
            <Button Grid.Column="0" Grid.Row="0" Text="המעטפות שלי" HeightRequest="44"
              Clicked="OnMyEnvelopesClicked" />
            <Button Grid.Column="1" Grid.Row="0" Text="הוספת הכנסה/הוצאה" HeightRequest="44"
              Clicked="OnAddTransactionClicked" />
            <Button Grid.Column="0" Grid.Row="1" Text="ניהול קטגוריות" HeightRequest="44"
                    Clicked="OnManageCategoriesClicked"/>
            <Button Grid.Column="1" Grid.Row="1" Text="ניהול תקציבים" HeightRequest="44"
                    Clicked="OnManageBudgetClicked"/>
        </Grid>
    </Grid>
</ContentPage>
