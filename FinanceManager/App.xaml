<?xml version="1.0" encoding="utf-8" ?>
<Application
    x:Class="FinanceManager.App"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <Application.Resources>
        <ResourceDictionary>
            <x:Double x:Key="BodySize">16</x:Double>
            <x:Double x:Key="TitleSize">22</x:Double>

            <Style TargetType="Label">
                <Setter Property="FontFamily" Value="Rubik" />
                <Setter Property="FontSize"   Value="{StaticResource BodySize}" />
            </Style>

            <Style TargetType="Button">
                <Setter Property="FontFamily" Value="RubikMedium" />
                <Setter Property="FontSize"   Value="{StaticResource BodySize}" />
            </Style>

            <Style TargetType="Entry">
                <Setter Property="FontFamily" Value="Rubik" />
                <Setter Property="FontSize"   Value="{StaticResource BodySize}" />
            </Style>

            <Style x:Key="Title1" TargetType="Label">
                <Setter Property="FontFamily" Value="RubikBold" />
                <Setter Property="FontSize"   Value="{StaticResource TitleSize}" />
            </Style>

            <Style TargetType="Editor">
                <Setter Property="FontFamily" Value="Rubik" />
                <Setter Property="FontSize"   Value="{StaticResource BodySize}" />
            </Style>
            <Style TargetType="Picker">
                <Setter Property="FontFamily" Value="Rubik" />
                <Setter Property="FontSize"   Value="{StaticResource BodySize}" />
            </Style>
            <Style TargetType="DatePicker">
                <Setter Property="FontFamily" Value="Rubik" />
                <Setter Property="FontSize"   Value="{StaticResource BodySize}" />
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
